{
	"name": "usher-advertiser",
	"version": "0.0.0",
	"description": "Usher Advertiser CLI",
	"author": "Ryan Soury <ryan@usher.so>",
	"bin": {
		"usherad": "./bin/run"
	},
	"homepage": "https://github.com/usherlabs/advertiser",
	"license": "GPL-3.0",
	"main": "./build/cmd.js",
	"types": "index.d.ts",
	"repository": "usherlabs/advertiser",
	"files": [
		"/bin",
		"/build",
		"/dist"
	],
	"dependencies": {
		"@ceramicnetwork/http-client": "^2.0.4",
		"@glazed/datamodel": "^0.3.0",
		"commander": "^9.3.0",
		"dids": "^3.1.0",
		"dotenv": "^16.0.1",
		"jsonfile": "^6.1.0",
		"key-did-provider-ed25519": "^2.0.0",
		"key-did-resolver": "^2.0.4",
		"mkdirp": "^1.0.4",
		"uint8arrays": "^3.0.0"
	},
	"devDependencies": {
		"@types/jsonfile": "^6.1.0",
		"@types/mkdirp": "^1.0.2",
		"@types/node": "^16.9.4",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"esbuild": "^0.14.42",
		"eslint": "^8.14.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-typescript": "^2.7.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"ts-node": "^10.2.1",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	},
	"scripts": {
		"build": "npm-run-all -s clean compile cmd:build",
		"clean": "del dist build",
		"compile": "tsc --project ./tsconfig.build.json && resolve-tspaths",
		"cmd:build": "esbuild ./src/cmd.js --bundle --outdir=build --platform=node",
		"cmd:watch": "esbuild ./src/cmd.js --bundle --outdir=build --platform=node --watch",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts"
	},
	"engines": {
		"node": ">=12.0.0"
	},
	"keywords": [
		"usher",
		"arweave",
		"web3",
		"advertiser"
	]
}
